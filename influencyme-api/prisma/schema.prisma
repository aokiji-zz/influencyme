// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaign {
  id          String       @id @default(uuid())
  name        String
  startDate   DateTime
  endDate     DateTime
  cost        Int
  description String
  workedHours Int
  type        CampaignType
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

enum CampaignType {
  TRADITIONAL
  INFLUENCE
}
